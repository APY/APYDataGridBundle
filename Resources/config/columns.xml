<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="grid.column.text.class">APY\DataGridBundle\Grid\Column\TextColumn</parameter>
        <parameter key="grid.column.number.class">APY\DataGridBundle\Grid\Column\NumberColumn</parameter>
        <parameter key="grid.column.boolean.class">APY\DataGridBundle\Grid\Column\BooleanColumn</parameter>
        <parameter key="grid.column.datetime.class">APY\DataGridBundle\Grid\Column\DateTimeColumn</parameter>
        <parameter key="grid.column.date.class">APY\DataGridBundle\Grid\Column\DateColumn</parameter>
        <parameter key="grid.column.time.class">APY\DataGridBundle\Grid\Column\TimeColumn</parameter>
        <parameter key="grid.column.array.class">APY\DataGridBundle\Grid\Column\ArrayColumn</parameter>
        <parameter key="grid.column.simple_array.class">APY\DataGridBundle\Grid\Column\SimpleArrayColumn</parameter>
        <parameter key="grid.column.blank.class">APY\DataGridBundle\Grid\Column\BlankColumn</parameter>
        <parameter key="grid.column.rank.class">APY\DataGridBundle\Grid\Column\RankColumn</parameter>
        <parameter key="grid.column.join.class">APY\DataGridBundle\Grid\Column\JoinColumn</parameter>
    </parameters>

    <services>
        <service id="grid.column.text" class="%grid.column.text.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.number" class="%grid.column.number.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.boolean" class="%grid.column.boolean.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.datetime" class="%grid.column.datetime.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.date" class="%grid.column.date.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.time" class="%grid.column.time.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.array" class="%grid.column.array.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.simple_array" class="%grid.column.simple_array.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.blank" class="%grid.column.blank.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.rank" class="%grid.column.rank.class%" public="false">
            <tag name="grid.column.extension" />
        </service>

        <service id="grid.column.join" class="%grid.column.join.class%" public="false">
            <tag name="grid.column.extension" />
        </service>
    </services>
</container>