<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults public="false"/>

        <!-- Core -->
        <service id="APY\DataGridBundle\Grid\GridRegistryInterface" class="APY\DataGridBundle\Grid\GridRegistry"/>

        <!-- @todo: plan a BC break to remove: public="true" -->
        <service id="APY\DataGridBundle\Grid\GridFactoryInterface" class="APY\DataGridBundle\Grid\GridFactory" public="true">
            <argument type="service" id="service_container"/>
            <argument type="service" id="APY\DataGridBundle\Grid\GridRegistryInterface"/>
        </service>

        <service id="%grid.manager.class%" class="%grid.manager.class%">
            <argument type="service" id="service_container"/>
        </service>
    </services>
</container>
